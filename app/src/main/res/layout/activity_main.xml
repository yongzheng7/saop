<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello SAOP!"
                android:textSize="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="打印Log[具体请看Logcat]"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dialog"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dialog Before"
                        android:textSize="25dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_construction_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="构造方法上的Dialog"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_void_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[Void] , Param[View]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_void_before_callback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[Void] , Param[View , Callback]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_string_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[String] , Param[View]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_string_before_callback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[String] , Param[View , Callback]"
                        android:textSize="20dp" />




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dialog After"
                        android:textSize="25dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_construction_after"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="构造方法上的Dialog"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_void_after"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[Void] , Param[View]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_void_after_callback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[Void] , Param[View , Callback]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_string_after"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[String] , Param[View]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/test_dialog_string_after_callback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return[String] , Param[View , Callback]"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permission"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_Permission_sync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="同步获取权限,全部获取到并执行[限制方法无返回]"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/test_Permission_async_void"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="异步获取,执行和权限获取并向操作[void]"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/test_Permission_async_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="异步获取,执行....................操作[return]"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_click_single"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="预防重复点击[1000ms]点击生效一次"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <TextView
                        android:id="@+id/test_click_some_double"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="允许重复点击[双击Void]"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <TextView
                        android:id="@+id/test_click_some_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="允许重复点击[三击String]"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <TextView
                        android:id="@+id/test_click_some_infinite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="允许重复点击[无穷]"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exception"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_exception"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="触发一个异常......"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intercept"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_Intercept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="测试拦截器..."
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>